---
const { title, imageUrl, bottomImageUrl, bottomTitle } = Astro.props;
---

<div
  class="card w-96 bg-base-100 shadow-xl border-2 border-solid font-sourceCodePro">
  <div class="card-body">
    <h4 class="card-title font-[500] text-[18px] leading-[22.63px]">
      {title}
    </h4>
    <img src={imageUrl} alt="carbon_negative_construction_bricks" />
    <div class="flex mx-24">
      <img src={bottomImageUrl} alt="" />
      <p class="ml-2 text-[14px]">{bottomTitle}</p>
    </div>
  </div>
</div>
